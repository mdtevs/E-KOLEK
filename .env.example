# ============================================
# E-KOLEK Environment Configuration Template
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# ============================================
# DJANGO SETTINGS
# ============================================
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost,192.168.1.15

# JWT Authentication (separate from Django SECRET_KEY for better security)
JWT_SECRET_KEY=your-jwt-secret-key-here-different-from-django-secret

# ============================================
# DATABASE SETTINGS
# ============================================
DB_NAME=ekolek_db
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_HOST=localhost
DB_PORT=5432

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================
# OTP CONFIGURATION (iProg Tech SMS API)
# ============================================
# IMPORTANT: OTP is now sent via SMS API (not dedicated OTP API)
# Use SMS_API_TOKEN for both OTP and SMS notifications

# DEPRECATED: IPROG_API_TOKEN (kept for backward compatibility)
# Use SMS_API_TOKEN instead for all SMS/OTP operations
IPROG_API_TOKEN=your_iprogtech_api_token_here

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_RESEND_COOLDOWN_SECONDS=60

# ============================================
# SMS NOTIFICATION SETTINGS (iProg Tech)
# ============================================
# Enable/disable SMS notifications
SMS_ENABLED=True

# iProg Tech SMS API URL (default should work)
SMS_API_URL=https://www.iprogsms.com/api/v1/sms_messages

# Your iProg Tech API Token (REQUIRED - Get from iProg Tech dashboard)
# This token is used for BOTH OTP sending and general SMS notifications
SMS_API_TOKEN=your_iprogtech_api_token_here

# SMS API timeout in seconds (default: 10)
SMS_API_TIMEOUT=10

# SMS Network Provider (default: 2 for all networks)
# 1 = Single network provider
# 2 = Multi-network (supports ALL Philippine mobile networks - Globe, Smart, Sun, DITO, etc.)
SMS_PROVIDER=2

# ============================================
# GOOGLE DRIVE SETTINGS (Optional)
# ============================================
USE_GOOGLE_DRIVE=False
GOOGLE_DRIVE_OAUTH_CREDENTIALS_FILE=path/to/google-drive-oauth-credentials.json
GOOGLE_DRIVE_TOKEN_FILE=path/to/google-drive-token.pickle
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id

# ============================================
# SITE SETTINGS
# ============================================
SITE_URL=http://localhost:8000

# ============================================
# REDIS SETTINGS (for Celery)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# SECURITY NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Keep all API tokens and passwords secure
# 3. Use different tokens for development and production
# 4. Rotate tokens periodically
# 5. Set DJANGO_DEBUG=False in production
# 6. Use strong SECRET_KEY in production (generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())")
